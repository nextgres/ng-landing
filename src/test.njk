<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Timeline Grid Test</title>
  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <!-- Bootstrap Icons -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    rel="stylesheet"
  />
  <style>
    /* Container with a central “pole” */
    .timeline-container { position: relative; padding: 2rem 0; }
    .timeline-container::before {
      content: "";
      position: absolute;
      top: 0;
      bottom: 0;
      left: 50%;
      width: 4px;
      background: rgba(13,110,253,0.3);
      transform: translateX(-50%);
    }

    /* hide pole on small screens */
    @media (max-width: 767.98px) {
      .timeline-container::before {
        display: none;
      }
      .timeline-container .row {
        flex-direction: column;
      }
      .timeline-container .col {
        max-width: 100%;
        flex: 0 0 100%;
      }
      .timeline-container .circle-wrapper {
        margin-bottom: 1rem;
      }
      .timeline-container .circle-wrapper {
        display: none;
      }
    }

    /* Consistent card height */
    .step-card { min-height: 200px; }
    /* Circle wrappers */
    .circle-wrapper {
      background: #13222f;
      border-radius: 50%;
      width: 3rem;
      height: 3rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    /* Short connector between circles */
    .line {
      width: 4px;
      background-color: #0d6efd;
      height: 2rem;
      margin: 0 auto;
    }
  </style>
</head>
<section id="timeline" class="timeline-section bg-dark text-light">
  <div class="container timeline-container">
    <!-- Step 1 -->
    <div class="row g-0 align-items-center mb-4 flex-column flex-md-row">
      <div class="col order-1 order-md-1" style="flex:0 0 100%; max-width:100%; flex:0 0 45%; max-width:45%;">
        <div class="card step-card text-center border-0 shadow-sm bg-secondary bg-opacity-10 text-light">
          <div class="card-body">
            <h5 class="card-title">Lorem ipsum dolor sit amet</h5>
            <p class="card-text">Consectetur adipiscing elit.</p>
          </div>
        </div>
      </div>
      <div class="col order-2 order-md-2 d-none d-md-flex align-items-center justify-content-center" style="flex:0 0 100%; max-width:100%; flex:0 0 10%; max-width:10%;">
        <div class="circle-wrapper">
          <i class="bi bi-1-circle-fill fs-2 text-primary"></i>
        </div>
      </div>
      <div class="col order-3 order-md-3" style="flex:0 0 100%; max-width:100%; flex:0 0 45%; max-width:45%;"></div>
    </div>
    <!-- Step 2 -->
    <div class="row g-0 align-items-center mb-4 flex-column flex-md-row">
      <div class="col order-1 order-md-1" style="flex:0 0 100%; max-width:100%; flex:0 0 45%; max-width:45%;"></div>
      <div class="col order-2 order-md-2 d-none d-md-flex align-items-center justify-content-center" style="flex:0 0 100%; max-width:100%; flex:0 0 10%; max-width:10%;">
        <div class="circle-wrapper">
          <i class="bi bi-2-circle-fill fs-2 text-primary"></i>
        </div>
      </div>
      <div class="col order-3 order-md-3" style="flex:0 0 100%; max-width:100%; flex:0 0 45%; max-width:45%;">
        <div class="card step-card text-center border-0 shadow-sm bg-secondary bg-opacity-10 text-light">
          <div class="card-body">
            <h5 class="card-title">Lorem ipsum dolor sit amet</h5>
            <p class="card-text">Consectetur adipiscing elit.</p>
          </div>
        </div>
      </div>
    </div>
    <!-- Step 3 -->
    <div class="row g-0 align-items-center flex-column flex-md-row">
      <div class="col order-1 order-md-1" style="flex:0 0 100%; max-width:100%; flex:0 0 45%; max-width:45%;">
        <div class="card step-card text-center border-0 shadow-sm bg-secondary bg-opacity-10 text-light">
          <div class="card-body">
            <h5 class="card-title">Lorem ipsum dolor sit amet</h5>
            <p class="card-text">Consectetur adipiscing elit.</p>
          </div>
        </div>
      </div>
      <div class="col order-2 order-md-2 d-none d-md-flex align-items-center justify-content-center" style="flex:0 0 100%; max-width:100%; flex:0 0 10%; max-width:10%;">
        <div class="circle-wrapper">
          <i class="bi bi-3-circle-fill fs-2 text-primary"></i>
        </div>
      </div>
      <div class="col order-3 order-md-3" style="flex:0 0 100%; max-width:100%; flex:0 0 45%; max-width:45%;"></div>
    </div>
  </div>
</section>
</html>
