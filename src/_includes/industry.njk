---
layout: base.njk
---
<section class="py-5" style="background: #13222f;">
  <div class="container">
    <h1 class="display-4 mb-3 text-primary border-bottom border-primary pb-2">{{ headline }}</h1>
    <p class="lead mb-4">{{ body }}</p>
    <ul class="list-unstyled mb-4">
      {% for benefit in benefits %}
        <li class="mb-2">
          <i class="bi {{ benefit.icon | default('bi-check-circle-fill') }} text-success me-2"></i>
          <span class="text-secondary">{{ benefit.text }}</span>
        </li>
      {% endfor %}
    </ul>
    <a href="{{ ctaUrl }}" class="btn btn-primary btn-lg">{{ ctaText }}</a>
  </div>
</section>
